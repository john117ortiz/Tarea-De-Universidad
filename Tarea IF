numero 1

num = int(input("Ingresa un numero:"))
if num > 0:
 print("El numero ingresado es positivo")
 exit(1)
elif num == 0:
 print("El numero insertado es cero")
 exit (1)
else: num < 0
print("El numero insertado es Negativo")
exit(1)


