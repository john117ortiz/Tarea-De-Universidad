Numero 12


num1 = int(input("Ingrese el primer número: "))
num2 = int(input("Ingrese el segundo número: "))
num3 = int(input("Ingrese el tercer número: "))


if num1 > 0 and num2 > 0 and num3 > 0:
    print("Todos los números son positivos")
    exit(1)
elif num1 < 0 and num2 < 0 and num3 < 0:
    print("Todos los números son negativos")
    exit(1)
elif num1 == 0 or num2 == 0 or num3 == 0:
    print("su numero incluye al menos un cero")
    exit(1)
else:
    print("Números mixtos")
    exit(1)


numero 13

año = int(input("Ingrese un año: "))

if año % 400 == 0:
    print(f"{año} es un año bisiesto.")
    exit(1)
elif año % 100 == 0:
    print(f"{año} no es un año bisiesto.")
    exit(1)
elif año % 4 == 0:
    print(f"{año} es un año bisiesto.")
    exit(1)
else:
    print(f"{año} no es un año bisiesto.")
    exit(1)


numero 14 

calificacion = int(input("Ingrese la calificación numérica (0-100): "))

if calificacion >= 90 and calificacion <= 100:
    letra = "A"
elif calificacion >= 80 and calificacion <= 89:
    letra = "B"
elif calificacion >= 70 and calificacion <= 79:
    letra = "C"
elif calificacion >= 60 and calificacion <= 69:
    letra = "D"
elif calificacion >= 0 and calificacion <= 59:
    letra = "F"

print(f"Su calificación fue {calificacion} usted obtuvo una {letra}")

numero 15 

lado1 = int(input("Ingrese la longitud del primer lado: "))
lado2 = int(input("Ingrese la longitud del segundo lado: "))
lado3 = int(input("Ingrese la longitud del tercer lado: "))

if lado1 + lado2 > lado3 and lado1 + lado3 > lado2 and lado2 + lado3 > lado1:
    print("Estas tres longitudes pueden formar un triángulo.")
    exit(1)
else:
    print("Estas tres longitudes NO pueden formar un triángulo.")
    exit(1)



numero 16
precio = int(input("Ingrese el precio del producto: $"))


if precio < 50:
    porcentaje_descuento = 0
elif precio >= 50 and precio <= 100:
    porcentaje_descuento = 5
else:
    porcentaje_descuento = 10
descuento = precio * (porcentaje_descuento / 100)
precio_final = precio - descuento

print(f"Precio final: ${precio_final:.2f}")

numero 17

lado1 = int(input("Ingrese la longitud del primer lado del triángulo: "))
lado2 = int(input("Ingrese la longitud del segundo lado del triángulo: "))
lado3 = int(input("Ingrese la longitud del tercer lado del triángulo: "))


if lado1 + lado2 > lado3 and lado1 + lado3 > lado2 and lado2 + lado3 > lado1:
    if lado1 == lado2 == lado3:
        print("Es un triángulo equilátero (todos los lados iguales).")
    elif lado1 == lado2 or lado1 == lado3 or lado2 == lado3:
        print("Es un triángulo isósceles (dos lados iguales).")
    else:
        print("Es un triángulo escaleno (todos los lados diferentes).")

numero 18 

temperatura = int(input("Ingrese la temperatura en grados Celsius: "))

if temperatura < 0:
    print("Hace mucho frío(Que haces afuera?)")
elif temperatura >= 0 and temperatura <= 20:
    print("Clima fresco")
elif temperatura >= 21 and temperatura <= 30:
    print("Clima agradable(lindo dia para paseo)")
else:
    print("Hace mucho calor(Vamos para la playa)")

numero 19

hora = int(input("Ingrese la hora (0-23): "))

if hora >= 6 and hora <= 11:
    turno = "Mañana"
elif hora >= 12 and hora <= 17:
    turno = "Tarde"
elif hora >= 18 and hora <= 23:
    turno = "Noche"
else:
    turno = "Madrugada"
    
print(f"La hora {hora}:00 corresponde al turno: {turno}")
